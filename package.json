{
    "name": "flo-poly",
    "description": "A practical, root-focused JavaScript polynomial utility library.",
    "version": "5.0.2",
    "author": {
        "name": "Floris Steenkamp"
    },
    "private": false,
    "license": "MIT",
    "main": "node/index",
    "directories": {
        "test": "test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FlorisSteenkamp/FloPoly.git"
    },
    "keywords": [
        "polynomial",
        "roots",
        "root",
        "finding"
    ],
    "bugs": {
        "url": "https://github.com/FlorisSteenkamp/FloPoly/issues"
    },
    "homepage": "https://github.com/FlorisSteenkamp/FloPoly",
    "dependencies": {
        "big-float-ts": "^2.0.0",
        "double-double": "^1.0.3",
        "json-stringify-safe": "^5.0.1"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.14.2",
        "chai": "^4.2.0",
        "circular-dependency-plugin": "^5.2.0",
        "coveralls": "^3.1.0",
        "mocha": "^8.2.0",
        "mocha-lcov-reporter": "^1.3.0",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "source-map-support": "^0.5.19",
        "ts-loader": "^8.1.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.0.3",
        "webpack": "^5.31.2",
        "webpack-cli": "^4.6.0"
    },
    "scripts": {
        "build": "npm run build-browser && npm run build-node",
        "build-node": "rimraf node && tsc",
        "build-browser": "rimraf browser && webpack",
        "test": "mocha --require ts-node/register --require source-map-support/register \"test/**/*.spec.ts\" --recursive",
        "coverage": "nyc npm test",
        "test-ci": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
        "a": "mocha --require ts-node/register --require source-map-support/register \"test/roots/certified/all-roots-certified.spec.ts\" --recursive"
    }
}
