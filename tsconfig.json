{
    "compilerOptions": {
        "charset": "utf8",
        "module": "commonjs",
        "target": "es2020",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "declaration": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "outDir": "node"
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/other"
    ]
}